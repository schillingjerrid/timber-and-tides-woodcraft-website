---
const {
  title = "Woodworking Portfolio",
  description = "Handcrafted woodworking projects and commissions.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <meta name="theme-color" content="#0b0f0e" />
  </head>

  <body class="min-h-screen bg-zinc-950 text-zinc-100">
    <div class="mx-auto max-w-6xl px-4">
      <header class="py-6 flex items-center justify-between gap-4">
        <a href="/" class="font-semibold tracking-tight text-lg">
          Woodshop
        </a>

        <nav class="flex gap-4 text-sm text-zinc-200">
          <a class="hover:text-white" href="/projects/">Projects</a>
          <a class="hover:text-white" href="/testimonials/">Feedback</a>
          <a class="hover:text-white" href="/contact/">Contact</a>
        </nav>
      </header>

      <main class="pb-16">
        <slot />
      </main>

      <footer class="border-t border-zinc-800 py-8 text-sm text-zinc-400">
        <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
          <p>© {new Date().getFullYear()} Woodshop. Built with Astro.</p>
          <p class="text-zinc-500">Loveland, CO • Commissions welcome</p>
        </div>
      </footer>
    </div>
  </body>
</html>
