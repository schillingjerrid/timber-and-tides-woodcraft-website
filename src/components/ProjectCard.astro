---
import TagPill from "./TagPill.astro";

const { href, title, excerpt, coverImage, tags = [] } = Astro.props;
---

<a
  href={href}
  class="group overflow-hidden rounded-2xl border border-zinc-800 bg-zinc-900/40 hover:bg-zinc-900 transition"
>
  <div class="aspect-16/10 overflow-hidden bg-zinc-900">
    <img
      src={coverImage}
      alt={title}
      loading="lazy"
      class="h-full w-full object-cover group-hover:scale-[1.02] transition"
    />
  </div>

  <div class="p-4">
    <h3 class="text-base font-semibold">{title}</h3>
    {excerpt && <p class="mt-1 text-sm text-zinc-300">{excerpt}</p>}

    {tags?.length > 0 && (
      <div class="mt-3 flex flex-wrap gap-2">
        {tags.slice(0, 4).map((t) => <TagPill tag={t} />)}
      </div>
    )}
  </div>
</a>
